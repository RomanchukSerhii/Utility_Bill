<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.utilitybill.model.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_saveServiceFragment"
            app:destination="@id/saveServiceFragment" />
    </fragment>
    <fragment
        android:id="@+id/saveServiceFragment"
        android:name="com.example.utilitybill.model.AddServiceFragment"
        android:label="fragment_save_service"
        tools:layout="@layout/fragment_add_service" >
        <action
            android:id="@+id/action_saveServiceFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>